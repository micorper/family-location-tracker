<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QRActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- QR Scanner Section -->
        <TextView
            android:id="@+id/tvScanQRTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/scan_qr_code"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvScanQRDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/scan_qr_description"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvScanQRTitle" />

        <Button
            android:id="@+id/btnScanQR"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:text="@string/scan_qr"
            android:backgroundTint="@color/primary"
            android:textColor="@android:color/white"
            android:drawableStart="@drawable/ic_qr_code_scanner"
            android:padding="16dp"
            app:layout_constraintEnd_toStartOf="@+id/btnGenerateQR"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvScanQRDescription" />

        <Button
            android:id="@+id/btnGenerateQR"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"
            android:text="@string/generate_qr"
            android:backgroundTint="@color/secondary"
            android:textColor="@android:color/white"
            android:drawableStart="@drawable/ic_qr_code"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnScanQR"
            app:layout_constraintTop_toBottomOf="@+id/tvScanQRDescription" />

        <!-- QR Code Display Area -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardQRCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:visibility="gone"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnGenerateQR">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/your_family_qr_code"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:layout_marginBottom="16dp" />

                <ImageView
                    android:id="@+id/ivGeneratedQR"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="16dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/qr_code" />

                <TextView
                    android:id="@+id/tvQRCodeData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/qr_code_data"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:textAlignment="center"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="monospace" />

                <Button
                    android:id="@+id/btnShareQR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/share_qr_code"
                    android:backgroundTint="@color/accent"
                    android:textColor="@android:color/white"
                    android:drawableStart="@drawable/ic_share"
                    android:padding="16dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Scan Result Area -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardScanResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:visibility="gone"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnGenerateQR">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/family_group_found"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:textAlignment="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tvFamilyGroupInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/family_group_info"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:layout_marginBottom="24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnJoinFamily"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="@string/join_family"
                        android:backgroundTint="@color/primary"
                        android:textColor="@android:color/white"
                        android:padding="16dp" />

                    <Button
                        android:id="@+id/btnCancelScan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="@string/cancel"
                        android:backgroundTint="@color/secondary"
                        android:textColor="@android:color/white"
                        android:padding="16dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Progress Indicator -->
        <ProgressBar
            android:id="@+id/progressQR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnGenerateQR" />

        <!-- Instructions Section -->
        <TextView
            android:id="@+id/tvInstructions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/qr_instructions"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
