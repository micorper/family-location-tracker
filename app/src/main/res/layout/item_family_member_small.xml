<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Profile Photo -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardProfilePhoto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/layoutMemberInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivMemberPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person"
                android:contentDescription="@string/member_photo" />

        </androidx.cardview.widget.CardView>

        <!-- Member Info -->
        <LinearLayout
            android:id="@+id/layoutMemberInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/layoutLocationInfo"
            app:layout_constraintStart_toEndOf="@+id/cardProfilePhoto"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvMemberName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/member_name"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvMemberStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/member_status"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <!-- Location Info -->
        <LinearLayout
            android:id="@+id/layoutLocationInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/layoutMemberInfo"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Online Status Indicator -->
            <View
                android:id="@+id/viewOnlineStatus"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/online_status_indicator"
                tools:background="@drawable/online_status_indicator" />

            <!-- Distance -->
            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/distance"
                android:textSize="10sp"
                android:textColor="@color/primary"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
